<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.praktikan.luasnkeliling.MainActivity">

    <LinearLayout
        android:layout_margin="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilihlah Bangun yang akan dihitung"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:entries="@array/opsi"/>

        <EditText
            android:hint="Masukkan nilai sisi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:id="@+id/input"/>
        <CheckBox
            android:onClick="checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/luasCheck"
            android:text="Luas"/>
        <CheckBox
            android:onClick="checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kelilingCheck"
            android:text="Keliling"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Luas "
            android:id="@+id/hasil_luas"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keliling"
            android:id="@+id/hasil_keliling"/>

    </LinearLayout>
        


</android.support.constraint.ConstraintLayout>
